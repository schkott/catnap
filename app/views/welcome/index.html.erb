<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"%>
<%= javascript_include_tag "http://code.highcharts.com/highcharts.js"%>
<h1>Catnap</h1>
<script>
$(function () { 
    $('#chart-container').highcharts({
        title: {
            text: 'Your Sleep Vs. Activity'
        },
        xAxis: {
            type: 'datetime'
        },
        yAxis: [{ //Primary yAxis
            title: {
                text: 'Calories Burned',
                style: {
	            	color: 'orange',
	            }
            },
            labels: {
                format: '{value} kCal',
                style: {
	            	color: 'orange',
	            },
            }
        },{ //Secondary yAxis
        	gridLineWidth: 0,
            title: {
                text: 'Sleep',
                style: {
	            	color: 'lightgreen',
	            },
            },
            labels: {
                format: '{value} hrs.',
                style: {
	            	color: 'lightgreen',
	            },
            },
            opposite: true
        }],
        series: [{
        	pointInterval: <%= 1.day * 1000 %>,
        	pointStart: <%= 1.week.ago.to_i * 1000 %>,
            name: 'Sleep',
            type: 'spline',
            color: 'lightgreen',
            yAxis: 1,
            data: [8, 7.1, 4, 6, 6.1, 11, 7.9],
            tooltip: {
            	valueSuffix: ' hrs.'
            }
        }, {
        	pointInterval: <%= 1.day * 1000 %>,
        	pointStart: <%= 1.week.ago.to_i * 1000 %>,
            name: 'Calories Burned',
            type: 'spline',
            color: 'orange',
            yAxis: 0,
            data: [450, 200, 100, 254, 289, 123, 348],
            tooltip: {
            	valueSuffix: ' kCal'
            }
        }]
    });
});
</script>